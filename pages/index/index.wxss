/**index.wxss**/
.index{
  height: 100%;
  display: flex;
  direction:column;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.swiper{
  width: 100%;
  height: 400rpx;
  margin-bottom: 15rpx;
}

.blockRow{
  width: 100%;
  display: -webkit-flex;
  direction: row;
  justify-content: center;
  flex-wrap: wrap;
}

.blockItem{
  width: 95%;
  height: 160rpx;
  margin-bottom: 15rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: start;
}

.blockColumn{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.blockRowtext{
  color: white;
  font-size: 14pt;
  width: 100%;
  padding: 15px 0px 0px 20px;
}

.blockRowtext2{
  color: white;
  font-size: 10pt;
  padding: 0px 0px 15px 20px;
}

.fullFather{
  width: 100%;
  height: 100%;
}